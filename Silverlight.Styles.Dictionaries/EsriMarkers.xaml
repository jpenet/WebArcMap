                                    <DoubleAnimation BeginTime="00:00:00"
                                                     Duration="0:0:0.2"
                                                     Storyboard.TargetName="customEnlargeRotatingMarkerSymbolRotate"
                                                     Storyboard.TargetProperty="Angle"
